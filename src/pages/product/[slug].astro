---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { loadProductsWithMedia, type ProductWithMedia } from '../../lib/products';
import { withBase } from '../../lib/paths';
import { MEDIA_PLACEHOLDER_URL } from '../../lib/placeholders';
import { loadSiteConfig, getConfigValue } from '../../lib/config';

export async function getStaticPaths() {
  const products = await loadProductsWithMedia();
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product }
  }));
}

const { product } = Astro.props as { product: ProductWithMedia };
const siteConfig = await loadSiteConfig();
const catalogUrl = import.meta.env.PUBLIC_CATALOG_API_URL || '';
const catalogMode = (import.meta.env.PUBLIC_CATALOG_MODE || 'hybrid').toLowerCase();
const pricingApiBase = (() => {
  const preferred = import.meta.env.PUBLIC_PRICING_API_URL || import.meta.env.PUBLIC_CATALOG_API_URL || '';
  if (preferred && preferred.includes('://')) {
    try {
      return new URL(preferred).origin;
    } catch {
      return 'https://admin-api.heerawalla.com';
    }
  }
  return 'https://admin-api.heerawalla.com';
})();
const primaryMedia = product.media.images[0]?.url || product.media.videos[0]?.url;
const rawImage = primaryMedia;
const fallback = MEDIA_PLACEHOLDER_URL;
const image = rawImage ? (rawImage.startsWith('http') ? rawImage : withBase(rawImage)) : fallback;
const imageMeta = product.media.images.map((m) => ({ url: m.url, description: m.description || '' }));
const imageCount = imageMeta.length;
const parseList = (value?: string) => {
  if (value === undefined || value === null) return [];
  if (Array.isArray(value)) {
    return value.map((item) => String(item).trim()).filter(Boolean);
  }
  if (typeof value === 'string') {
    const trimmed = value.trim();
    if (trimmed.startsWith('[')) {
      try {
        const parsed = JSON.parse(trimmed);
        if (Array.isArray(parsed)) {
          return parsed.map((item) => String(item).trim()).filter(Boolean);
        }
      } catch {
        // Fall back to delimiter parsing.
      }
    }
    return value
      .split(/[|,]/)
      .map((item) => item.trim())
      .filter(Boolean);
  }
  if (typeof value === 'number' || typeof value === 'boolean') {
    return [String(value)];
  }
  return [];
};
const normalizeStoneType = (value: string) =>
  value
    .replace(/diamond\(s\)/gi, 'Diamond')
    .replace(/diamonds?\b/gi, 'Diamond')
    .replace(/\s+/g, ' ')
    .trim();
const stoneTypes = parseList(product.stone_type_options || product.stone_types)
  .map(normalizeStoneType)
  .filter(Boolean);
const naturalAvailable = stoneTypes.some((item) => /natural/i.test(item));
const labAvailable = stoneTypes.some((item) => /lab/i.test(item));
const naturalStoneLabel =
  stoneTypes.find((item) => /natural/i.test(item)) || 'Natural Diamond';
const labStoneLabel =
  stoneTypes.find((item) => /lab/i.test(item)) || 'Lab Grown Diamond';
const stoneOptions = [
  ...(labAvailable ? [{ value: labStoneLabel, label: labStoneLabel, mode: 'lab' }] : []),
  ...(naturalAvailable
    ? [{ value: naturalStoneLabel, label: naturalStoneLabel, mode: 'natural' }]
    : [])
];
const hasStoneOptions = stoneOptions.length > 0;
const parseOptionList = (value: unknown) => {
  if (value === null || value === undefined) return [];
  if (Array.isArray(value)) {
    return value.map((item) => String(item).trim()).filter(Boolean);
  }
  if (typeof value === 'string') {
    const trimmed = value.trim();
    if (trimmed.startsWith('[')) {
      try {
        const parsed = JSON.parse(trimmed);
        if (Array.isArray(parsed)) {
          return parsed.map((item) => String(item).trim()).filter(Boolean);
        }
      } catch {
        // Fall back to delimiter parsing.
      }
    }
    return value
      .split('|')
      .map((item) => item.trim())
      .filter(Boolean);
  }
  if (typeof value === 'number' || typeof value === 'boolean') {
    return [String(value)];
  }
  return [];
};
const formatWeightNumber = (value: unknown) => {
  const num = typeof value === 'number' ? value : Number(String(value || '').trim());
  if (!Number.isFinite(num)) return '';
  return Number.isInteger(num) ? String(num) : String(num).replace(/(\.\d*?)0+$/, '$1').replace(/\.$/, '');
};
const formatWeightFixed2 = (value: unknown) => {
  const num = typeof value === 'number' ? value : Number(String(value || '').trim());
  if (!Number.isFinite(num)) return '';
  return num.toFixed(2);
};
const buildStoneWeightInfoValue = (rawValue: string) => {
  const trimmed = String(rawValue || '').trim();
  if (!trimmed) {
    return { details: 'Not specified', totalLabel: 'Total: 0 ct' };
  }
  const normalized = trimmed.replace(/(\d),(\d)/g, '$1.$2');
  const parts = normalized
    .split(/\n|;|,|\|/)
    .map((entry) => entry.trim())
    .filter(Boolean);
  const breakdown = parts
    .map((entry) => {
      const match = entry.match(/([0-9]*\.?[0-9]+)\s*(?:ct)?\s*[xX]\s*([0-9]*\.?[0-9]+)/);
      if (match) {
        return { weight: Number(match[1]), count: Number(match[2]) };
      }
      const numbers = entry.match(/[0-9]*\.?[0-9]+/g) || [];
      if (numbers.length >= 2) {
        const first = Number(numbers[0]);
        const second = Number(numbers[1]);
        const weight = first <= second ? first : second;
        const count = first <= second ? second : first;
        return { weight, count };
      }
      if (numbers.length === 1) {
        return { weight: Number(numbers[0]), count: 1 };
      }
      return { weight: 0, count: 0 };
    })
    .filter((entry) => Number.isFinite(entry.weight) && entry.weight > 0 && Number.isFinite(entry.count) && entry.count > 0);
  if (!breakdown.length) {
    const numeric = Number(trimmed.replace(/[^0-9.]/g, ''));
    if (Number.isFinite(numeric) && numeric > 0) {
      const formatted = formatWeightNumber(numeric);
      return { details: `Approx. ${formatted} ct`, totalLabel: `Total: ${formatWeightFixed2(numeric)} ct` };
    }
    return { details: trimmed, totalLabel: '' };
  }
  const detailText = breakdown
    .map((entry) => {
      const weight = formatWeightNumber(entry.weight);
      const count = formatWeightNumber(entry.count);
      const pieceLabel = Number(count) === 1 ? 'piece' : 'pieces';
      return `${count} ${pieceLabel} of approximately ${weight} ct`;
    })
    .join('\n');
  const total = breakdown.reduce((sum, entry) => sum + entry.weight * entry.count, 0);
  const totalLabel = total > 0 ? `Total: ${formatWeightFixed2(total)} ct` : '';
  return { details: detailText, totalLabel };
};
  const SIZE_TYPE_ORDER = ['small', 'medium', 'large', 'xlarge', 'xxlarge', 'xxxlarge', 'xxxxlarge'];
  const sizeTypeOrderIndex = new Map(SIZE_TYPE_ORDER.map((label, idx) => [label, idx]));
  const formatSizeTypeLabel = (value: string) => {
    const trimmed = String(value || '').trim().toLowerCase();
    if (!trimmed) return 'Size';
    return `${trimmed[0].toUpperCase()}${trimmed.slice(1)}`;
  };
  const buildStoneWeightGroupsFromOptions = (options?: Array<Record<string, unknown>>) => {
    if (!Array.isArray(options) || !options.length) return [];
    const groups = new Map<string, { items: string[]; isPrimary: boolean }>();
    options.forEach((option) => {
      const sizeType = String(option.size_type || '').trim().toLowerCase() || 'size';
      const carat = formatWeightNumber(option.carat);
      const count = formatWeightNumber(option.count);
      if (!carat || !count) return;
      const entry = `${carat} x ${count}`;
      const existing = groups.get(sizeType) || { items: [], isPrimary: false };
      existing.items.push(entry);
      if (option.is_primary) existing.isPrimary = true;
      groups.set(sizeType, existing);
    });
    return Array.from(groups.entries())
      .sort((a, b) => {
        const aPrimary = a[1].isPrimary ? 0 : 1;
        const bPrimary = b[1].isPrimary ? 0 : 1;
        if (aPrimary !== bPrimary) return aPrimary - bPrimary;
        const aOrder = sizeTypeOrderIndex.get(a[0]) ?? 999;
        const bOrder = sizeTypeOrderIndex.get(b[0]) ?? 999;
        if (aOrder !== bOrder) return aOrder - bOrder;
        return a[0].localeCompare(b[0]);
      })
      .map(([sizeType, group]) => ({
        size_type: sizeType,
        value: group.items.join(', '),
        label: `${formatSizeTypeLabel(sizeType)} Â· ${group.items.join(', ')}`,
        is_primary: group.isPrimary,
      }));
  };
  const buildMetalWeightBySizeType = (options?: Array<Record<string, unknown>>) => {
    const map = new Map<string, string>();
    if (!Array.isArray(options) || !options.length) return map;
    options.forEach((option) => {
      const sizeType = String(option.size_type || '').trim().toLowerCase() || 'size';
      const raw = String(option.metal_weight || '').trim();
      if (!raw) return;
      const parsed = parseOptionList(raw)[0];
      if (parsed && !map.has(sizeType)) map.set(sizeType, parsed);
    });
    return map;
  };
  const buildSizeTypeOptions = (
    stoneGroups: Array<{ size_type: string; is_primary: boolean }>,
    metalBySizeType: Map<string, string>
  ) => {
    const sizeTypes = new Set<string>();
    const primaryTypes = new Set<string>();
    stoneGroups.forEach((group) => {
      if (group.size_type) sizeTypes.add(group.size_type);
      if (group.is_primary) primaryTypes.add(group.size_type);
    });
    metalBySizeType.forEach((_value, sizeType) => {
      if (sizeType) sizeTypes.add(sizeType);
    });
    return Array.from(sizeTypes)
      .sort((a, b) => {
        const aPrimary = primaryTypes.has(a) ? 0 : 1;
        const bPrimary = primaryTypes.has(b) ? 0 : 1;
        if (aPrimary !== bPrimary) return aPrimary - bPrimary;
        const aOrder = sizeTypeOrderIndex.get(a) ?? 999;
        const bOrder = sizeTypeOrderIndex.get(b) ?? 999;
        if (aOrder !== bOrder) return aOrder - bOrder;
        return a.localeCompare(b);
      })
      .map((value) => ({ value, label: formatSizeTypeLabel(value) }));
  };
  const stoneWeightGroups = buildStoneWeightGroupsFromOptions(
    Array.isArray(product.stone_options) ? product.stone_options : []
  );
  const stoneWeightOptions = stoneWeightGroups.map((group) => ({
    value: group.value,
    label: group.label,
    size_type: group.size_type,
  }));
  const hasStoneWeight = stoneWeightOptions.length > 0;
  const buildMetalWeightOptionsFromOptions = (options?: Array<Record<string, unknown>>) => {
    if (!Array.isArray(options) || !options.length) return [];
    const weights: string[] = [];
  options.forEach((option) => {
    const raw = String(option.metal_weight || '').trim();
    if (!raw) return;
    parseOptionList(raw).forEach((value) => {
      if (value) weights.push(value);
    });
  });
  return Array.from(new Set(weights));
};
  const metalWeightBySizeType = buildMetalWeightBySizeType(
    Array.isArray(product.metal_weight_options) ? product.metal_weight_options : []
  );
  const sizeTypeOptions = buildSizeTypeOptions(stoneWeightGroups, metalWeightBySizeType);
  const hasSizeType = sizeTypeOptions.length > 0;
  const selectedSizeType = sizeTypeOptions[0]?.value || '';
const selectedStoneWeightValue =
  stoneWeightGroups.find((group) => group.size_type === selectedSizeType)?.value ||
  stoneWeightGroups[0]?.value ||
  '';
const selectedStoneWeightInfo = buildStoneWeightInfoValue(selectedStoneWeightValue);
  const metalWeightOptions = (() => {
    const fromOptions = buildMetalWeightOptionsFromOptions(
      Array.isArray(product.metal_weight_options) ? product.metal_weight_options : []
    );
    if (fromOptions.length) return fromOptions;
    return parseOptionList(
      product.metal_weight_range || (product.metal_weight === undefined ? '' : String(product.metal_weight))
    );
  })();
  const selectedMetalWeightValue =
    (selectedSizeType ? metalWeightBySizeType.get(selectedSizeType) : '') ||
    metalWeightOptions[0] ||
    '';
  const hasMetalWeight = metalWeightOptions.length > 0;
const clarityOptions = parseList(product.clarity);
const colorOptions = parseList(product.color);
const cutOptions = parseList(product.cut);
const diamondDefault = labAvailable
  ? labStoneLabel
  : naturalAvailable
    ? naturalStoneLabel
    : naturalStoneLabel;
const metalOptionLabels = parseList(product.metal_options || product.metal);
const metalOptions =
  metalOptionLabels.length > 0
    ? metalOptionLabels.map((label) => ({ value: label, label }))
    : (() => {
        const metalBase = product.metal || '18K Gold';
        const normalized = metalBase.toLowerCase();
        const colors = [];
        if (normalized.includes('yellow')) colors.push('Yellow');
        if (normalized.includes('white')) colors.push('White');
        if (normalized.includes('rose')) colors.push('Rose');
        const metalColors = colors.length ? colors : ['Yellow', 'White'];
        return [
          ...metalColors.map((color) => ({
            value: `18K ${color} Gold`,
            label: `18K ${color} Gold`
          })),
          ...metalColors.map((color) => ({
            value: `14K ${color} Gold`,
            label: `14K ${color} Gold`
          })),
          { value: 'Platinum', label: 'Platinum' }
        ];
      })();
const defaultMetalValue = metalOptions[0]?.value || '18K Gold';
const defaultMetalLabel = metalOptions[0]?.label || defaultMetalValue;
const diamondDefaultLabel = diamondDefault === 'lab' ? labStoneLabel : naturalStoneLabel;
const designCode = product.design_code || 'Signature';
const designCodeSlug = designCode.toLowerCase();
const isDesignCode = ['axis', 'continuum', 'eclipse'].includes(designCodeSlug);
const designCodeHref = (() => {
  if (!isDesignCode) return withBase('/inspirations');
  const category = product.category || '';
  if (category.startsWith('men/')) {
    return withBase(`/mens-jewelry?design_code=${designCodeSlug}`);
  }
  if (category.startsWith('women/')) {
    return withBase(`/womens-jewelry?design_code=${designCodeSlug}`);
  }
  if (category.startsWith('unisex/')) {
    return withBase(`/womens-jewelry?design_code=${designCodeSlug}`);
  }
  return withBase(`/womens-jewelry?design_code=${designCodeSlug}`);
})();
const editionHrefMap: Record<string, string> = {
  women: withBase('/womens-jewelry'),
  men: withBase('/mens-jewelry')
};
const editionLabel = (() => {
  const gender = (product.gender || '').toLowerCase();
  if (gender === 'women') return "Women's Edition";
  if (gender === 'men') return "Men's Edition";
  if (gender === 'unisex') return 'Unisex Edition';
  const category = product.category || '';
  const group = category.split('/')[0] || '';
  if (group === 'women') return "Women's Edition";
  if (group === 'men') return "Men's Edition";
  if (group === 'unisex') return 'Unisex Edition';
  return product.design_code || product.category || '';
})();
const groupLabel = editionLabel || product.category || product.design_code || '';
const editionKey = (product.gender || (product.category || '').split('/')[0] || '').toLowerCase();
const editionHref = editionHrefMap[editionKey];
const breadcrumbCrumbs = [
  { label: 'Home', href: withBase('/') },
  { label: designCode, href: designCodeHref, kind: 'design-code' },
  ...(editionHref ? [{ label: editionLabel, href: editionHref }] : []),
  { label: product.name }
];
const bespokeHref = withBase(`/bespoke/${product.slug}`);

const sizeSpec = (() => {
  const tags = (() => {
    const base = parseList(product.tags).map((tag) => tag.toLowerCase());
    if (base.length) return base;
    const category = (product.category || '').split('/').pop();
    return category ? [category.toLowerCase()] : [];
  })();
  const hasTag = (values: string[]) => values.some((value) => tags.includes(value));
  if (hasTag(['ring', 'rings', 'band', 'bands'])) {
    return {
      label: 'Ring size',
      options: ['4', '4.5', '5', '5.5', '6', '6.5', '7', '7.5', '8', '8.5', '9', '9.5', '10', '10.5', '11', '11.5', '12']
    };
  }
  if (hasTag(['bracelet', 'bracelets', 'bangle', 'bangles'])) {
    return {
      label: 'Bracelet length',
      options: ['6"', '6.5"', '7"', '7.5"', '8"']
    };
  }
  if (hasTag(['necklace', 'necklaces', 'pendant', 'pendants', 'chain', 'chains'])) {
    return {
      label: 'Chain length',
      options: ['16"', '18"', '20"', '22"', '24"']
    };
  }
  if (hasTag(['earring', 'earrings'])) {
    return {
      label: 'Earring size',
      options: ['Standard']
    };
  }
  return null;
})();
const defaultSizeValue = sizeSpec?.label === 'Chain length' ? sizeSpec?.options?.[0] : '';
const productSlug = product.slug;
const chainBaseInches = Number(getConfigValue(siteConfig, 'chain_length_base_inches', '16'));
const chainWeightStep = Number(getConfigValue(siteConfig, 'chain_length_weight_step_g', '0'));

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Product',
  name: product.name,
  image: product.media.images.length
    ? product.media.images.map((m) => m.url)
    : [image],
  description: product.description,
  sku: product.id,
  brand: { '@type': 'Brand', name: 'Heerawalla' }
};
const jsonLdString = JSON.stringify(jsonLd);
void jsonLdString;
---

<BaseLayout
  title={`${product.name} | Heerawalla`}
  description={product.description}
  breadcrumbs={breadcrumbCrumbs}
>
  <Header />
  <main class="container py-10 space-y-8">
    <Breadcrumbs crumbs={breadcrumbCrumbs} />
    <div class="grid gap-8 lg:grid-cols-2 items-start">
      <div class="card relative bg-white">
        <div class="relative flex items-center justify-center overflow-hidden rounded-2xl bg-white">
          <img
            src={image}
            alt={product.name}
            class="block max-h-[70vh] w-auto max-w-full object-contain"
            loading="lazy"
            decoding="async"
            fetchpriority="high"
            data-product-image
            data-product-image-meta={JSON.stringify(imageMeta)}
            data-protected-image
          />
        </div>
        {imageCount > 1 ? (
          <button
            type="button"
            class="absolute left-3 top-1/2 -translate-y-1/2 inline-flex h-10 w-10 items-center justify-center rounded-full border border-white/70 bg-white/90 text-lg font-semibold text-ink shadow-sm backdrop-blur transition hover:bg-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ink"
            data-image-prev
            aria-label="Previous image"
          >
            &larr;
          </button>
        ) : null}
        {imageCount > 1 ? (
          <button
            type="button"
            class="absolute right-3 top-1/2 -translate-y-1/2 inline-flex h-10 w-10 items-center justify-center rounded-full border border-white/70 bg-white/90 text-lg font-semibold text-ink shadow-sm backdrop-blur transition hover:bg-white focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ink"
            data-image-next
            aria-label="Next image"
          >
            &rarr;
          </button>
        ) : null}
      </div>
      <div class="space-y-6">
        <div>
          <h1 class="text-3xl font-semibold tracking-tight" data-product-title>{product.name}</h1>
        </div>
        <div class="flex flex-wrap items-center gap-2 text-xs uppercase tracking-[0.18em] text-slate-500">
          <a href={designCodeHref} class="hover:text-ink">{designCode}</a>
          {groupLabel ? <span aria-hidden="true">|</span> : null}
          {groupLabel ? <span>{groupLabel}</span> : null}
        </div>
        <div class="space-y-2">
          <div class="flex items-center gap-4">
            <span
              class="text-xl font-semibold"
              data-metal-default={defaultMetalValue}
              data-diamond-default={diamondDefault}
              data-pricing-base={pricingApiBase}
              id="price-display"
            >
              Pricing on request
            </span>
            <span class="text-sm text-slate-500 flex items-center gap-2">
              <span data-selected-metal>{defaultMetalLabel}</span>
              <span class="relative group">
                <button
                  type="button"
                  class="inline-flex h-4 w-4 items-center justify-center rounded-full border border-slate-300 text-[10px] text-slate-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ink focus-visible:ring-offset-2 focus-visible:ring-offset-white"
                  aria-describedby="gold-tooltip"
                >
                  i
                </button>
                <span
                  id="gold-tooltip"
                  role="tooltip"
                  class="pointer-events-none absolute left-0 top-full z-10 mt-2 w-60 max-w-[90vw] translate-x-0 border border-slate-200 bg-white px-3 py-2 text-[11px] leading-relaxed text-slate-600 opacity-0 transition-opacity duration-200 group-hover:opacity-100 group-focus-within:opacity-100 sm:left-1/2 sm:-translate-x-1/2"
                >
                  For daily wear, 14K offers added durability; 18K brings richer color, and platinum adds a bright, weighty finish.
                </span>
              </span>
              <span
                class={`relative group inline-flex items-center gap-1${hasStoneOptions ? '' : ' hidden'}`}
                data-stone-summary
              >
                <span data-selected-stone>{diamondDefaultLabel}</span>
                <button
                  type="button"
                  class="inline-flex h-4 w-4 items-center justify-center rounded-full border border-slate-300 text-[10px] text-slate-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ink focus-visible:ring-offset-2 focus-visible:ring-offset-white"
                  aria-describedby="diamond-quality-tooltip"
                >
                  i
                </button>
                <span
                  id="diamond-quality-tooltip"
                  class="pointer-events-none absolute left-0 top-full z-10 mt-2 w-60 max-w-[90vw] translate-x-0 border border-slate-200 bg-white px-3 py-2 text-[11px] leading-relaxed text-slate-600 opacity-0 transition-opacity duration-200 group-hover:opacity-100 group-focus-within:opacity-100 sm:left-1/2 sm:-translate-x-1/2"
                  role="tooltip"
                >
                  Lab-grown and natural diamonds have the same chemical and optical properties. Natural diamonds form in the earth over time, while lab-grown diamonds are produced in controlled conditions. Grading (cut, color, clarity, carat) applies equally to both; certification and quality depend on the individual stone.
                </span>
              </span>
            </span>
          </div>
          <div class="grid gap-3 sm:grid-cols-2">
            <label
              class={`text-sm space-y-1${hasStoneOptions ? '' : ' hidden'}`}
              data-stone-field
            >
              <span class="text-xs uppercase tracking-[0.18em] text-slate-500">Stone Type</span>
              <select
                class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm text-ink"
                data-stone-select
                disabled={!hasStoneOptions}
              >
                {stoneOptions.length ? (
                  stoneOptions.map((option) => (
                    <option value={option.value} selected={option.value === diamondDefault}>
                      {option.label}
                    </option>
                  ))
                ) : (
                  <option value="">None</option>
                )}
              </select>
            </label>
            <label class="text-sm space-y-1">
              <span class="text-xs uppercase tracking-[0.18em] text-slate-500">Metal Type</span>
              <select
                class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm text-ink"
                data-metal-select
              >
                {metalOptions.map((option) => (
                  <option value={option.value} selected={option.value === defaultMetalValue}>
                    {option.label}
                  </option>
                ))}
              </select>
            </label>
            <label
              class={`text-sm space-y-1${hasSizeType ? '' : ' hidden'}`}
              data-size-type-field
            >
              <span class="text-xs uppercase tracking-[0.18em] text-slate-500 flex items-center gap-2">
                Size Type
                <span
                  class={`relative group inline-flex items-center${hasStoneWeight || hasMetalWeight ? '' : ' hidden'}`}
                  data-size-type-info
                >
                  <button
                    type="button"
                    class="inline-flex h-4 w-4 items-center justify-center rounded-full border border-slate-300 text-[10px] text-slate-500 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ink focus-visible:ring-offset-2 focus-visible:ring-offset-white"
                    aria-describedby="size-type-tooltip"
                  >
                    i
                  </button>
