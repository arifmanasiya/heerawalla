              .map((option) => {
                const value = option.value || '';
                const active = value === selectedClarity;
                const disabled = option.available ? '' : ' diamond-clarity-swatch--disabled';
                const ariaDisabled = option.available ? '' : ' aria-disabled="true"';
                const disabledAttr = option.available ? '' : ' disabled';
                return `<button type="button" class="diamond-clarity-swatch${active ? ' is-active' : ''}${disabled}" data-clarity-option data-clarity-value="${value}" aria-pressed="${active}"${ariaDisabled}${disabledAttr}>
              <span class="diamond-clarity-dot">${value}</span>
            </button>`;
              })
              .join('');
            claritySwatchWrap.innerHTML = html;
            const buttons = Array.from(claritySwatchWrap.querySelectorAll('[data-clarity-option]'));
            buttons.forEach((button) => {
              if (button.disabled) return;
              button.addEventListener('click', () => {
                const nextValue = button.getAttribute('data-clarity-value') || '';
                setSelectValue(claritySelect, nextValue);
                buttons.forEach((node) => {
                  const isActive = node.getAttribute('data-clarity-value') === nextValue;
                  node.classList.toggle('is-active', isActive);
                  node.setAttribute('aria-pressed', String(isActive));
                });
                if (typeof window.__hwApplyPricing === 'function') {
                  window.__hwApplyPricing();
                }
              });
            });
          }

          const cutOptions = expandStandardOptions(match.cut, STANDARD_CUT_OPTIONS).map((value) => ({
            value,
            label: value
          }));
          const cutAvailable = new Set(cutOptions.map((option) => option.value));
          const cutDisplayOptions = STANDARD_CUT_OPTIONS.map((value) => ({
            value,
            available: cutAvailable.has(value)
          }));
          const cutDefault = cutOptions[cutOptions.length - 1]?.value || '';
          setSelectOptions(cutSelect, cutOptions, cutSelect?.value || cutDefault);
          if (cutSwatchWrap) {
            const selectedCut = cutSelect?.value || '';
            const html = cutDisplayOptions
              .map((option) => {
                const value = option.value || '';
                const active = value === selectedCut;
                const disabled = option.available ? '' : ' diamond-cut-swatch--disabled';
                const ariaDisabled = option.available ? '' : ' aria-disabled="true"';
                const disabledAttr = option.available ? '' : ' disabled';
                return `<button type="button" class="diamond-cut-swatch${active ? ' is-active' : ''}${disabled}" data-cut-option data-cut-value="${value}" aria-pressed="${active}"${ariaDisabled}${disabledAttr}>
              <span class="diamond-cut-dot">${value}</span>
            </button>`;
              })
              .join('');
            cutSwatchWrap.innerHTML = html;
            const buttons = Array.from(cutSwatchWrap.querySelectorAll('[data-cut-option]'));
            buttons.forEach((button) => {
              if (button.disabled) return;
              button.addEventListener('click', () => {
                const nextValue = button.getAttribute('data-cut-value') || '';
                setSelectValue(cutSelect, nextValue);
                buttons.forEach((node) => {
                  const isActive = node.getAttribute('data-cut-value') === nextValue;
                  node.classList.toggle('is-active', isActive);
                  node.setAttribute('aria-pressed', String(isActive));
                });
                if (typeof window.__hwApplyPricing === 'function') {
                  window.__hwApplyPricing();
                }
              });
            });
          }

          if (window.__hwRenderStoneWeightSwatches) window.__hwRenderStoneWeightSwatches();
          if (window.__hwSyncStoneWeightSwatches) window.__hwSyncStoneWeightSwatches();
          if (window.__hwUpdateStoneWeightVisual) window.__hwUpdateStoneWeightVisual();
          if (window.__hwRefreshPricingDefaults) {
            window.__hwRefreshPricingDefaults();
          } else if (window.__hwApplyPricing) {
            window.__hwApplyPricing();
          }
        } catch {
          // Ignore catalog errors; fall back to SSR data.
        }
      };

      fetchCatalog();
    })();
  </script>
  <script is:inline>
    (() => {
      const img = document.querySelector('[data-product-image]');
      const mark = document.querySelector('[data-signature-mark]');
      const updateSignature = () => {
        if (!img || !mark) return;
        const imgRect = img.getBoundingClientRect();
        const wrap = img.closest('.relative');
        const wrapRect = wrap?.getBoundingClientRect();
        if (!wrapRect) return;
        const offsetRight = Math.max(6, wrapRect.right - imgRect.right + 6);
        const offsetBottom = Math.max(6, wrapRect.bottom - imgRect.bottom + 6);
        mark.style.right = `${offsetRight}px`;
        mark.style.bottom = `${offsetBottom}px`;
      };
      if (img) {
        if (img.complete) updateSignature();
        img.addEventListener('load', updateSignature);
      }
      window.addEventListener('resize', updateSignature);
    })();
  </script>

  <script is:inline>
    (() => {
      const link = document.querySelector('[data-breadcrumb-kind="design-code"]');
      if (!(link instanceof HTMLAnchorElement)) return;
      const ref = document.referrer;
      if (!ref) return;
      try {
        const url = new URL(ref);
        if (url.origin !== window.location.origin) return;
        const path = url.pathname;
        const allowed = ['/mens-jewelry', '/womens-jewelry', '/inspirations'];
        if (!allowed.some((prefix) => path.startsWith(prefix))) return;
        link.setAttribute('href', `${url.pathname}${url.search}${url.hash}`);
      } catch {
        // Ignore invalid referrers.
      }
    })();
  </script>
