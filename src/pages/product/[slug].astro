          stoneWeightSelect.disabled = stoneWeightOptions.length === 0 || sizeTypeOptions.length > 0;
        }
        if (stoneWeightField) {
          stoneWeightField.classList.add('hidden');
        }
        if (metalWeightSelect) {
          setSelectOptions(metalWeightSelect, metalWeightOptions, selectedMetalWeightValue);
          metalWeightSelect.disabled = metalWeightOptions.length === 0 || sizeTypeOptions.length > 0;
        }
        if (metalWeightField) {
          metalWeightField.classList.add('hidden');
        }
        if (claritySelect) {
          setSelectOptions(claritySelect, clarityOptions, clarityOptions[clarityOptions.length - 1]?.value);
          claritySelect.disabled = clarityOptions.length === 0;
        }
        if (clarityField) {
          clarityField.classList.toggle('hidden', clarityOptions.length === 0);
        }
        if (colorSelect) {
          setSelectOptions(colorSelect, colorOptions, colorOptions[colorOptions.length - 1]?.value);
          colorSelect.disabled = colorOptions.length === 0;
        }
        if (colorField) {
          colorField.classList.toggle('hidden', colorOptions.length === 0);
        }
        if (cutSelect) {
          setSelectOptions(cutSelect, cutOptions, cutOptions[cutOptions.length - 1]?.value);
          cutSelect.disabled = cutOptions.length === 0;
        }
        if (cutField) {
          cutField.classList.toggle('hidden', cutOptions.length === 0);
        }
        if (sizeField && sizeSelect && sizeLabel) {
          if (sizeSpec) {
            sizeField.classList.remove('hidden');
            sizeSelect.disabled = false;
            sizeLabel.textContent = sizeSpec.label;
            const sizeOptions = sizeSpec.options.map((option) => ({ value: option, label: option }));
            const defaultSize =
              sizeSpec.label === 'Chain length' && sizeOptions.length ? sizeOptions[0].value : '';
            setSelectOptions(
              sizeSelect,
              sizeOptions,
              defaultSize,
              defaultSize ? '' : `Select ${sizeSpec.label.toLowerCase()}`
            );
          } else if (!sizeSelect.options.length) {
            sizeField.classList.add('hidden');
            sizeSelect.disabled = true;
          }
        }

        applySizeTypeSelection();
        if (window.__hwUpdateChainWeightInfo && sizeSelect) {
          window.__hwUpdateChainWeightInfo(sizeSelect.value);
        }
        if (window.__hwRefreshPricingDefaults) {
          window.__hwRefreshPricingDefaults();
        } else if (window.__hwApplyPricing) {
          window.__hwApplyPricing();
        }
      };

      const fetchCatalog = async () => {
        const joiner = catalogUrlValue.includes('?') ? '&' : '?';
        const cacheBust = `&bust=${Date.now()}`;
        const url = `${catalogUrlValue}${joiner}include=products${cacheBust}`;
        try {
          const response = await fetch(url, { cache: 'no-store' });
          if (!response.ok) return;
          const data = await response.json();
          if (!data || !Array.isArray(data.products)) return;
          const match = data.products.find((entry) => entry && entry.slug === productSlugValue);
          if (!match) return;
          updatePricingFromProduct(match);
        } catch {
          // Ignore catalog errors; fall back to SSR data.
        }
      };

      fetchCatalog();
    })();
  </script>
  <script is:inline>
    (() => {
      const link = document.querySelector('[data-breadcrumb-kind="design-code"]');
      if (!(link instanceof HTMLAnchorElement)) return;
      const ref = document.referrer;
      if (!ref) return;
      try {
        const url = new URL(ref);
        if (url.origin !== window.location.origin) return;
        const path = url.pathname;
        const allowed = ['/mens-jewelry', '/womens-jewelry', '/inspirations'];
        if (!allowed.some((prefix) => path.startsWith(prefix))) return;
        link.setAttribute('href', `${url.pathname}${url.search}${url.hash}`);
      } catch {
        // Ignore invalid referrers.
      }
    })();
  </script>
