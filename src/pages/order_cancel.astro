---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { loadSiteConfig, getConfigValue } from '../lib/config';
import { withBase } from '../lib/paths';

const config = await loadSiteConfig();
const cancelApiBase = getConfigValue(
  config,
  'order_cancel_api_base',
  'https://admin-api.heerawalla.com'
);
const ordersEmail = getConfigValue(config, 'orders_email', 'orders@heerawalla.com');
---

<BaseLayout
  title="Cancel Order | Heerawalla"
  description="Cancel your Heerawalla order with a secure link."
>
  <Header />

  <main class="container py-12 space-y-12">
    <section class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] items-start">
      <div class="space-y-4">
        <p class="text-xs uppercase tracking-[0.3em] text-slate-500">Order cancellation</p>
        <h1 class="font-display text-4xl sm:text-5xl tracking-tight text-ink">Cancel your order</h1>
        <p class="text-sm text-slate-600 max-w-xl">
          Share the reason for canceling so we can follow up with the right details. Your concierge will confirm once the
          cancellation is complete.
        </p>

        <div
          class="border border-slate-200 bg-white p-6 space-y-5"
          data-order-cancel
          data-cancel-api={cancelApiBase}
        >
          <div class="text-xs uppercase tracking-[0.2em] text-slate-500">Status</div>
          <p class="text-sm text-slate-600" data-cancel-status>Loading your order details...</p>

          <div class="border-t border-slate-200 pt-4 space-y-4" data-cancel-summary>
            <div class="grid gap-1">
              <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Request</div>
              <div class="text-sm font-medium text-ink" data-order-id>--</div>
            </div>
            <div class="grid gap-1">
              <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Product</div>
              <div class="text-sm text-ink" data-order-product>--</div>
            </div>
            <div class="grid gap-1">
              <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Client</div>
              <div class="text-sm text-ink" data-order-name>--</div>
            </div>
          </div>

          <div class="space-y-2">
            <label class="text-xs uppercase tracking-[0.2em] text-slate-500" for="cancel-reason">
              Cancellation reason
            </label>
            <select
              id="cancel-reason"
              class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm text-ink"
              data-cancel-reason
              disabled
            >
              <option value="" selected>Select a reason</option>
              <option value="Timing changed">Timing changed</option>
              <option value="Budget changed">Budget changed</option>
              <option value="Found another option">Found another option</option>
              <option value="Need more details">Need more details</option>
              <option value="Order mistake">Order mistake</option>
              <option value="Other">Other</option>
            </select>
            <input
              class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm text-ink hidden"
              type="text"
              placeholder="Share any additional context (optional)"
              data-cancel-note
            />
          </div>

          <div class="flex flex-col sm:flex-row gap-3">
            <button class="btn btn-primary" data-cancel-submit disabled>Submit cancellation</button>
            <a class="btn btn-ghost" href={withBase('/')}>Back to home</a>
          </div>
          <p class="text-xs text-slate-500">
            We will email you after the cancellation is processed.
          </p>
        </div>
      </div>

      <aside class="space-y-4">
        <div class="card border border-slate-200 p-6 space-y-4">
          <div class="text-xs uppercase tracking-[0.3em] text-slate-500">Need help?</div>
          <p class="text-sm text-slate-600">
            If you would rather adjust timing or details, reply to the invoice email or reach us at
            <a class="underline text-ink" href={`mailto:${ordersEmail}`}>{ordersEmail}</a>.
          </p>
        </div>
      </aside>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script is:inline>
  (() => {
    const root = document.querySelector('[data-order-cancel]');
    if (!root) return;
    const statusEl = root.querySelector('[data-cancel-status]');
    const requestEl = root.querySelector('[data-order-id]');
    const productEl = root.querySelector('[data-order-product]');
    const nameEl = root.querySelector('[data-order-name]');
    const cancelBtn = root.querySelector('[data-cancel-submit]');
    const cancelReason = root.querySelector('[data-cancel-reason]');
    const cancelNote = root.querySelector('[data-cancel-note]');
    const apiBase = root.getAttribute('data-cancel-api') || '';
    const params = new URLSearchParams(window.location.search);
    const token = params.get('token') || params.get('t') || params.get('cancel');

    const setStatus = (message, tone) => {
      if (!statusEl) return;
      statusEl.textContent = message;
      statusEl.classList.remove('text-slate-600', 'text-rose-600', 'text-emerald-600');
      if (tone === 'error') {
        statusEl.classList.add('text-rose-600');
      } else if (tone === 'success') {
        statusEl.classList.add('text-emerald-600');
      } else {
        statusEl.classList.add('text-slate-600');
      }
    };

    const setEnabled = (enabled) => {
      if (cancelBtn) cancelBtn.disabled = !enabled;
      if (cancelReason) cancelReason.disabled = !enabled;
    };

    const requestJson = async (path, options = {}) => {
      if (!apiBase) throw new Error('missing_api');
      const base = apiBase.replace(/\/$/, '');
      const response = await fetch(`${base}${path}`, {
        headers: { 'Content-Type': 'application/json' },
        ...options,
      });
      if (!response.ok) {
        const text = await response.text();
        throw new Error(text || 'request_failed');
      }
      return await response.json();
    };

    if (!token) {
      setStatus('This cancellation link is missing or invalid. Please contact the concierge.', 'error');
      setEnabled(false);
      return;
    }

    const loadCancellation = async () => {
      setStatus('Loading your order details...');
      setEnabled(false);
      try {
        const data = await requestJson(`/orders/cancel?token=${encodeURIComponent(token)}`);
        const status = data.status || 'pending';
        if (requestEl) requestEl.textContent = data.requestId || '--';
        if (productEl) productEl.textContent = data.productName || '--';
        if (nameEl) nameEl.textContent = data.name || '--';

        if (status !== 'pending') {
          const message =
            status === 'canceled'
              ? 'This order was already canceled.'
              : 'This cancellation link has already been used.';
          setStatus(message, status === 'canceled' ? 'success' : 'error');
          setEnabled(false);
          return;
        }

        setStatus('Select a reason and submit your cancellation.', 'success');
        setEnabled(true);
      } catch (error) {
        setStatus('We could not load your order details. Please contact the concierge.', 'error');
      }
    };

    const submitCancellation = async () => {
      if (!cancelBtn || !cancelReason) return;
      const reasonValue = cancelReason.value;
      const noteValue = cancelNote ? cancelNote.value.trim() : '';
      if (!reasonValue) {
        setStatus('Select a cancellation reason to continue.', 'error');
        return;
      }
      setStatus('Submitting your cancellation...');
      setEnabled(false);
      try {
        await requestJson('/orders/cancel/confirm', {
          method: 'POST',
          body: JSON.stringify({ token, reason: reasonValue, note: noteValue }),
        });
        setStatus('Cancellation received. Your concierge will follow up shortly.', 'success');
      } catch (error) {
        setStatus('We could not cancel this order. Please contact the concierge.', 'error');
        setEnabled(true);
      }
    };

    if (cancelBtn) cancelBtn.addEventListener('click', submitCancellation);
    if (cancelReason) {
      cancelReason.addEventListener('change', () => {
        if (!cancelNote) return;
        const showNote = cancelReason.value === 'Other';
        cancelNote.classList.toggle('hidden', !showNote);
        if (!showNote) cancelNote.value = '';
      });
    }

    loadCancellation();
  })();
</script>
