---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { withBase } from '../lib/paths';
---

<BaseLayout
  title="Page not found | Heerawalla"
  description="The page you requested is not available. Return to Heerawalla’s collections and atelier guidance."
>
  <Header />

  <main class="max-w-7xl mx-auto px-6 py-20">
    <section class="grid gap-12 lg:grid-cols-[1.1fr_0.9fr] items-center">
      <div class="space-y-6">
        <p class="text-[11px] uppercase tracking-[0.34em] text-slate-500">Heerawalla</p>
        <h1 class="font-display text-4xl sm:text-5xl tracking-tight">Page not found</h1>
        <p class="text-sm text-slate-600 max-w-xl">
          The page you requested is not available. Return to the collections or begin a bespoke inquiry
          from our atelier.
        </p>
        <div class="flex flex-col sm:flex-row gap-3">
          <a
            href={withBase('/')}
            class="inline-flex items-center justify-center min-h-[44px] px-6 py-3 bg-ink text-white text-xs uppercase tracking-[0.24em] rounded-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ink focus-visible:ring-offset-2 focus-visible:ring-offset-white"
          >
            Return home
          </a>
          <a
            href={withBase('/inspirations')}
            class="inline-flex items-center justify-center min-h-[44px] px-5 py-3 text-xs uppercase tracking-[0.24em] text-ink border border-ink/20 rounded-none hover:border-ink/40 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ink focus-visible:ring-offset-2 focus-visible:ring-offset-white"
          >
            Explore inspirations
          </a>
          <a
            href={withBase('/inspirations')}
            class="inline-flex items-center justify-center min-h-[44px] px-5 py-3 text-xs uppercase tracking-[0.24em] text-ink border border-ink/20 rounded-none hover:border-ink/40 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ink focus-visible:ring-offset-2 focus-visible:ring-offset-white"
          >
            Visit inspirations
          </a>
        </div>
      </div>
      <div class="border border-slate-200 bg-white p-6 sm:p-8 space-y-4">
        <div class="text-xs uppercase tracking-[0.2em] text-slate-500">Quick links</div>
        <div class="flex flex-col gap-2 text-sm text-slate-600">
          <a href={withBase('/mens-jewelry')} class="hover:text-ink">Men’s edition</a>
          <a href={withBase('/womens-jewelry')} class="hover:text-ink">Women’s edition</a>
          <a href={withBase('/contact')} class="hover:text-ink">Contact concierge</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
