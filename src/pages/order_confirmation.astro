---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { loadSiteConfig, getConfigValue } from '../lib/config';

const config = await loadSiteConfig();
const confirmationApiBase = getConfigValue(
  config,
  'order_confirmation_api_base',
  'https://admin-api.heerawalla.com'
);
const ordersEmail = getConfigValue(config, 'orders_email', 'orders@heerawalla.com');
---

<BaseLayout
  title="Order Confirmation | Heerawalla"
  description="Confirm updates to your Heerawalla order and continue to secure checkout."
>
  <Header />

  <main class="container py-12 space-y-12">
    <section class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] items-start">
      <div class="space-y-4">
        <p class="text-xs uppercase tracking-[0.3em] text-slate-500">Order confirmation</p>
        <h1 class="font-display text-4xl sm:text-5xl tracking-tight text-ink">Confirm your updated order</h1>
        <p class="text-sm text-slate-600 max-w-xl">
          Your concierge updated the details below. Review the changes, then confirm to continue to secure checkout. If
          anything looks off, cancel and we will follow up.
        </p>

        <div
          class="border border-slate-200 bg-white p-6 space-y-5"
          data-order-confirmation
          data-confirmation-api={confirmationApiBase}
        >
          <div class="text-xs uppercase tracking-[0.2em] text-slate-500">Status</div>
          <p class="text-sm text-slate-600" data-confirm-status>Loading your confirmation details...</p>

          <div class="border-t border-slate-200 pt-4 space-y-4" data-confirm-summary>
            <div class="grid gap-1">
              <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Request</div>
              <div class="text-sm font-medium text-ink" data-order-id>--</div>
            </div>
            <div class="grid gap-1">
              <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Product</div>
              <div class="text-sm text-ink" data-order-product>--</div>
            </div>
            <div class="grid gap-1">
              <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Client</div>
              <div class="text-sm text-ink" data-order-name>--</div>
            </div>
          </div>

          <div class="space-y-3">
            <div class="text-xs uppercase tracking-[0.2em] text-slate-500">Updated details</div>
            <div class="divide-y divide-slate-200 border border-slate-200 bg-white" data-change-list>
              <div class="px-4 py-3 text-sm text-slate-500">Awaiting update details.</div>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-3">
            <button class="btn btn-primary" data-confirm-btn disabled>Confirm &amp; continue</button>
            <button class="btn btn-ghost" data-cancel-btn disabled>Cancel update</button>
          </div>
          <div class="space-y-2">
            <label class="text-xs uppercase tracking-[0.2em] text-slate-500" for="cancel-reason">
              Cancellation reason
            </label>
            <select
              id="cancel-reason"
              class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm text-ink"
              data-cancel-reason
              disabled
            >
              <option value="" selected>Select a reason</option>
              <option value="Timing changed">Timing changed</option>
              <option value="Budget changed">Budget changed</option>
              <option value="Found another option">Found another option</option>
              <option value="Need more details">Need more details</option>
              <option value="Order mistake">Order mistake</option>
              <option value="Other">Other</option>
            </select>
            <input
              class="w-full rounded-lg border border-slate-200 px-3 py-2 text-sm text-ink hidden"
              type="text"
              placeholder="Share any additional context (optional)"
              data-cancel-note
            />
            <p class="text-xs text-slate-500">
              We use this to improve service and follow up with the right details.
            </p>
          </div>
          <p class="text-xs text-slate-500">
            Confirmation opens secure checkout to reserve your piece.
          </p>
        </div>
      </div>

      <aside class="space-y-4">
        <div class="card border border-slate-200 p-6 space-y-4">
          <div class="text-xs uppercase tracking-[0.3em] text-slate-500">What happens next</div>
          <ul class="text-sm text-slate-600 space-y-2">
            <li>Confirming reserves your piece and opens secure checkout.</li>
            <li>Canceling pauses the update and alerts our concierge.</li>
            <li>Your link is private and can only be used once.</li>
          </ul>
        </div>
        <div class="border border-slate-200 bg-white p-5 text-sm text-slate-600 space-y-2">
          <p class="text-xs uppercase tracking-[0.2em] text-slate-500">Need assistance?</p>
          <p>
            Reply to the confirmation email or reach us at
            <a class="underline text-ink" href={`mailto:${ordersEmail}`}>{ordersEmail}</a>.
          </p>
        </div>
      </aside>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script is:inline>
  (() => {
    const root = document.querySelector('[data-order-confirmation]');
    if (!root) return;
    const statusEl = root.querySelector('[data-confirm-status]');
    const requestEl = root.querySelector('[data-order-id]');
    const productEl = root.querySelector('[data-order-product]');
    const nameEl = root.querySelector('[data-order-name]');
    const listEl = root.querySelector('[data-change-list]');
    const confirmBtn = root.querySelector('[data-confirm-btn]');
    const cancelBtn = root.querySelector('[data-cancel-btn]');
    const cancelReason = root.querySelector('[data-cancel-reason]');
    const cancelNote = root.querySelector('[data-cancel-note]');
    const apiBase = root.getAttribute('data-confirmation-api') || '';
    const params = new URLSearchParams(window.location.search);
    const token = params.get('token') || params.get('t') || params.get('confirmation');

    const setStatus = (message, tone) => {
      if (!statusEl) return;
      statusEl.textContent = message;
      statusEl.classList.remove('text-slate-600', 'text-rose-600', 'text-emerald-600');
      if (tone === 'error') {
        statusEl.classList.add('text-rose-600');
      } else if (tone === 'success') {
        statusEl.classList.add('text-emerald-600');
      } else {
        statusEl.classList.add('text-slate-600');
      }
    };

    const setButtonsEnabled = (enabled) => {
      if (confirmBtn) confirmBtn.disabled = !enabled;
      if (cancelBtn) cancelBtn.disabled = !enabled;
      if (cancelReason) cancelReason.disabled = !enabled;
    };

    const labelMap = {
      price: 'Price',
      timeline: 'Timeline',
      metal: 'Metal',
      stone: 'Stone type',
      stone_weight: 'Stone weight',
      size: 'Size',
    };

    const createRow = (label, fromValue, toValue) => {
      const row = document.createElement('div');
      row.className = 'grid gap-2 px-4 py-3 sm:grid-cols-[140px_1fr]';
      const labelEl = document.createElement('div');
      labelEl.className = 'text-[10px] uppercase tracking-[0.2em] text-slate-500';
      labelEl.textContent = label;
      const valueEl = document.createElement('div');
      valueEl.className = 'flex flex-wrap items-center gap-2 text-sm text-ink';
      const fromEl = document.createElement('span');
      fromEl.className = 'text-slate-400 line-through';
      fromEl.textContent = fromValue || '--';
      const arrowEl = document.createElement('span');
      arrowEl.className = 'text-slate-400';
      arrowEl.textContent = '->';
      const toEl = document.createElement('span');
      toEl.className = 'font-medium text-ink';
      toEl.textContent = toValue || '--';
      valueEl.append(fromEl, arrowEl, toEl);
      row.append(labelEl, valueEl);
      return row;
    };

    const requestJson = async (path, options = {}) => {
      if (!apiBase) throw new Error('missing_api');
      const base = apiBase.replace(/\/$/, '');
      const response = await fetch(`${base}${path}`, {
        headers: { 'Content-Type': 'application/json' },
        ...options,
      });
      if (!response.ok) {
        const text = await response.text();
        throw new Error(text || 'request_failed');
      }
      return await response.json();
    };

    if (!token) {
      setStatus('This confirmation link is missing or invalid. Please contact the concierge.', 'error');
      setButtonsEnabled(false);
      return;
    }

    const loadConfirmation = async () => {
      setStatus('Loading your confirmation details...');
      setButtonsEnabled(false);
      try {
        const data = await requestJson(`/orders/confirmation?token=${encodeURIComponent(token)}`);
        const order = data.order || data.item || {};
        const requestId = order.requestId || order.request_id || data.requestId || '--';
        const productName = order.productName || order.product_name || data.productName || '--';
        const customerName = order.name || data.name || '--';
        const status = data.status || 'pending';

        if (requestEl) requestEl.textContent = requestId || '--';
        if (productEl) productEl.textContent = productName || '--';
        if (nameEl) nameEl.textContent = customerName || '--';

        const changes = Array.isArray(data.changes)
          ? data.changes
          : Array.isArray(order.changes)
          ? order.changes
          : [];

        if (listEl) {
          listEl.innerHTML = '';
          if (!changes.length) {
            const empty = document.createElement('div');
            empty.className = 'px-4 py-3 text-sm text-slate-500';
            empty.textContent = 'No changes listed in this confirmation.';
            listEl.appendChild(empty);
          } else {
            changes.forEach((change) => {
              const label = change.label || labelMap[change.key] || 'Update';
              const fromValue = change.from ?? change.previous ?? change.old ?? '';
              const toValue = change.to ?? change.next ?? change.new ?? '';
              listEl.appendChild(createRow(label, String(fromValue || '--'), String(toValue || '--')));
            });
          }
        }

        if (status !== 'pending') {
          const statusMessage =
            status === 'confirmed'
              ? 'This update has already been confirmed. We will follow up with secure checkout.'
              : status === 'canceled'
              ? 'This update was canceled. Our concierge will follow up.'
              : 'This confirmation link has already been used.';
        setStatus(statusMessage, status === 'canceled' ? 'error' : 'success');
        setButtonsEnabled(false);
        return;
      }

      setStatus('Review the updated details and confirm to continue.', 'success');
      setButtonsEnabled(true);
    } catch (error) {
      setStatus('We could not load your confirmation details. Please contact the concierge.', 'error');
    }
  };

    const confirmUpdate = async () => {
      if (!confirmBtn) return;
      setStatus('Submitting confirmation...');
      setButtonsEnabled(false);
      try {
        const result = await requestJson('/orders/confirmation/confirm', {
          method: 'POST',
          body: JSON.stringify({ token }),
        });
        const paymentUrl = result.paymentUrl || result.checkoutUrl || result.url;
        if (paymentUrl) {
          window.location.href = paymentUrl;
          return;
        }
        setStatus('Confirmation received. We will email your secure checkout link shortly.', 'success');
      } catch (error) {
        setStatus('We could not confirm your update. Please contact the concierge.', 'error');
        setButtonsEnabled(true);
      }
    };

    const cancelUpdate = async () => {
      if (!cancelBtn) return;
      const reasonValue = cancelReason ? cancelReason.value : '';
      const noteValue = cancelNote ? cancelNote.value.trim() : '';
      if (!reasonValue) {
        setStatus('Select a cancellation reason to continue.', 'error');
        return;
      }
      setStatus('Canceling your update...');
      setButtonsEnabled(false);
      try {
        await requestJson('/orders/confirmation/cancel', {
          method: 'POST',
          body: JSON.stringify({ token, reason: reasonValue, note: noteValue }),
        });
        setStatus('Update canceled. Our concierge will follow up.', 'success');
      } catch (error) {
        setStatus('We could not cancel this update. Please contact the concierge.', 'error');
        setButtonsEnabled(true);
      }
    };

    if (confirmBtn) confirmBtn.addEventListener('click', confirmUpdate);
    if (cancelBtn) cancelBtn.addEventListener('click', cancelUpdate);
    if (cancelReason) {
      cancelReason.addEventListener('change', () => {
        if (!cancelNote) return;
        const showNote = cancelReason.value === 'Other';
        cancelNote.classList.toggle('hidden', !showNote);
        if (!showNote) cancelNote.value = '';
      });
    }

    loadConfirmation();
  })();
</script>
