---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { loadSiteConfig, getConfigValue } from '../lib/config';

const config = await loadSiteConfig();
const confirmationApiBase = getConfigValue(
  config,
  'order_confirmation_api_base',
  'https://admin-api.heerawalla.com'
);
const ordersEmail = getConfigValue(config, 'orders_email', 'orders@heerawalla.com');
---

<BaseLayout
  title="Order Confirmation | Heerawalla"
  description="Confirm updates to your Heerawalla order and continue to secure checkout."
>
  <Header />

  <main class="container py-12 space-y-12">
    <section class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr] items-start">
      <div class="space-y-4">
        <p class="text-xs uppercase tracking-[0.3em] text-slate-500">Order confirmation</p>
        <h1 class="font-display text-4xl sm:text-5xl tracking-tight text-ink">Confirm your updated order</h1>
        <p class="text-sm text-slate-600 max-w-xl">
          Your concierge updated the details below. Review the changes, then confirm to continue to secure checkout. If
          anything looks off, cancel and we will follow up.
        </p>

        <div
          class="border border-slate-200 bg-white p-6 space-y-5"
          data-order-confirmation
          data-confirmation-api={confirmationApiBase}
        >
          <div class="text-xs uppercase tracking-[0.2em] text-slate-500">Status</div>
          <p class="text-sm text-slate-600" data-confirm-status>Loading your confirmation details...</p>

          <div class="border-t border-slate-200 pt-4 space-y-4" data-confirm-summary>
            <div class="grid gap-1">
              <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Request</div>
              <div class="text-sm font-medium text-ink" data-order-id>--</div>
            </div>
            <div class="grid gap-1">
              <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Product</div>
              <div class="text-sm text-ink" data-order-product>--</div>
            </div>
            <div class="grid gap-1">
              <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Client</div>
              <div class="text-sm text-ink" data-order-name>--</div>
            </div>
          </div>

          <div class="border-t border-slate-200 pt-4 space-y-4" data-order-details>
            <div class="text-xs uppercase tracking-[0.2em] text-slate-500">Order details</div>
            <div class="space-y-4">
              <div
                class="aspect-[4/3] w-full rounded-2xl bg-slate-100 text-sm text-slate-400 flex items-center justify-center"
                data-order-media
              >
                Loading images...
              </div>
              <div class="grid gap-4 sm:grid-cols-2">
                <div class="grid gap-1">
                  <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Design code</div>
                  <div class="text-sm text-ink" data-order-design-code>--</div>
                </div>
                <div class="grid gap-1">
                  <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Metal</div>
                  <div class="text-sm text-ink" data-order-metal>--</div>
                </div>
                <div class="grid gap-1">
                  <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Metal weight (g)</div>
                  <div class="text-sm text-ink" data-order-metal-weight>--</div>
                </div>
                <div class="grid gap-1">
                  <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">
                    Final Metal weight difference (g)
                  </div>
                  <div class="text-sm text-ink" data-order-metal-weight-adjustment>--</div>
                </div>
                <div class="grid gap-1">
                  <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Stone</div>
                  <div class="text-sm text-ink" data-order-stone>--</div>
                </div>
                <div class="grid gap-1">
                  <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Stone weight</div>
                  <div class="text-sm text-ink" data-order-stone-weight>--</div>
                </div>
                <div class="grid gap-1">
                  <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Diamond breakdown</div>
                  <div class="text-sm text-ink" data-order-diamond-breakdown>--</div>
                </div>
                <div class="grid gap-1">
                  <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Size</div>
                  <div class="text-sm text-ink" data-order-size>--</div>
                </div>
                <div class="grid gap-1">
                  <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Timeline</div>
                  <div class="text-sm text-ink" data-order-timeline>--</div>
                </div>
                <div class="grid gap-1">
                  <div class="text-[10px] uppercase tracking-[0.2em] text-slate-500">Price</div>
                  <div class="text-sm text-ink" data-order-price>--</div>
                </div>
              </div>
            </div>
          </div>

          <div class="space-y-3">
            <div class="text-xs uppercase tracking-[0.2em] text-slate-500">Updated details</div>
            <div class="divide-y divide-slate-200 border border-slate-200 bg-white" data-change-list>
              <div class="px-4 py-3 text-sm text-slate-500">Awaiting update details.</div>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-3">
            <button class="btn btn-primary" data-confirm-btn disabled>Confirm and pay</button>
            <a class="btn btn-ghost" data-cancel-link href="#" aria-disabled="true">Cancel order</a>
          </div>
          <p class="text-xs text-slate-500">
            Confirmation opens secure checkout to reserve your piece.
          </p>
        </div>
      </div>

      <aside class="space-y-4">
        <div class="card border border-slate-200 p-6 space-y-4">
          <div class="text-xs uppercase tracking-[0.3em] text-slate-500">What happens next</div>
          <ul class="text-sm text-slate-600 space-y-2">
            <li>Confirming reserves your piece and opens secure checkout.</li>
            <li>Canceling pauses the update and alerts our concierge.</li>
            <li>Your link is private and can only be used once.</li>
          </ul>
        </div>
        <div class="border border-slate-200 bg-white p-5 text-sm text-slate-600 space-y-2">
          <p class="text-xs uppercase tracking-[0.2em] text-slate-500">Need assistance?</p>
          <p>
            Reply to the confirmation email or reach us at
            <a class="underline text-ink" href={`mailto:${ordersEmail}`}>{ordersEmail}</a>.
          </p>
        </div>
      </aside>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script is:inline>
  (() => {
    const root = document.querySelector('[data-order-confirmation]');
    if (!root) return;
    const statusEl = root.querySelector('[data-confirm-status]');
    const requestEl = root.querySelector('[data-order-id]');
    const productEl = root.querySelector('[data-order-product]');
    const nameEl = root.querySelector('[data-order-name]');
    const mediaEl = root.querySelector('[data-order-media]');
    const designCodeEl = root.querySelector('[data-order-design-code]');
    const metalEl = root.querySelector('[data-order-metal]');
    const metalWeightEl = root.querySelector('[data-order-metal-weight]');
    const metalWeightAdjustmentEl = root.querySelector('[data-order-metal-weight-adjustment]');
    const stoneEl = root.querySelector('[data-order-stone]');
    const stoneWeightEl = root.querySelector('[data-order-stone-weight]');
    const diamondBreakdownEl = root.querySelector('[data-order-diamond-breakdown]');
    const sizeEl = root.querySelector('[data-order-size]');
    const timelineEl = root.querySelector('[data-order-timeline]');
    const priceEl = root.querySelector('[data-order-price]');
    const listEl = root.querySelector('[data-change-list]');
    const confirmBtn = root.querySelector('[data-confirm-btn]');
    const cancelLink = root.querySelector('[data-cancel-link]');
    const apiBase = root.getAttribute('data-confirmation-api') || '';
    const params = new URLSearchParams(window.location.search);
    const token = params.get('token') || params.get('t') || params.get('confirmation');
    const catalogCache = { data: null, promise: null };

    const setStatus = (message, tone) => {
      if (!statusEl) return;
      statusEl.textContent = message;
      statusEl.classList.remove('text-slate-600', 'text-rose-600', 'text-emerald-600');
      if (tone === 'error') {
        statusEl.classList.add('text-rose-600');
      } else if (tone === 'success') {
        statusEl.classList.add('text-emerald-600');
      } else {
        statusEl.classList.add('text-slate-600');
      }
    };

    const setButtonsEnabled = (enabled) => {
      if (confirmBtn) confirmBtn.disabled = !enabled;
      if (cancelLink) {
        const href = cancelLink.getAttribute('href') || '';
        const canUse = enabled && href && href !== '#';
        cancelLink.setAttribute('aria-disabled', canUse ? 'false' : 'true');
        cancelLink.classList.toggle('pointer-events-none', !canUse);
        cancelLink.classList.toggle('opacity-60', !canUse);
      }
    };

    const labelMap = {
      price: 'Price',
      timeline: 'Timeline',
      timeline_adjustment_weeks: 'Timeline delay',
      metal: 'Metal',
      metal_weight: 'Metal weight (g)',
      metal_weight_adjustment: 'Final Metal weight difference (g)',
      stone: 'Stone type',
      stone_weight: 'Stone weight',
      diamond_breakdown: 'Diamond breakdown',
      size: 'Size',
    };

    const formatMoney = (value) => {
      if (value === undefined || value === null || value === '') return '--';
      const number = Number(String(value).replace(/[^0-9.]/g, ''));
      if (Number.isNaN(number)) return String(value);
      return number.toLocaleString('en-US', { style: 'currency', currency: 'USD', maximumFractionDigits: 0 });
    };

    const formatGrams = (value) => {
      const raw = String(value || '').trim();
      if (!raw) return '--';
      const number = Number(raw);
      if (Number.isNaN(number)) return raw;
      return `${number} g`;
    };

    const formatSignedGrams = (value) => {
      const raw = String(value || '').trim();
      if (!raw) return '--';
      const number = Number(raw);
      if (Number.isNaN(number)) return raw;
      const sign = number > 0 ? '+' : '';
      return `${sign}${number} g`;
    };

    const formatStoneWeight = (value) => {
      const raw = String(value || '').trim();
      if (!raw) return '--';
      const number = Number(raw);
      if (Number.isNaN(number)) return raw;
      return `${number} ct`;
    };

    const formatTimelineValue = (value) => {
      const raw = String(value || '').trim();
      if (!raw) return '';
      const normalized = raw.toLowerCase();
      if (normalized.includes('rush')) return 'Rush';
      if (normalized.includes('standard')) return 'Standard';
      return raw;
    };

    const formatTimelineSummary = (timelineValue, adjustmentValue) => {
      const base = formatTimelineValue(timelineValue) || '--';
      const number = Number(String(adjustmentValue || '').trim());
      if (!Number.isNaN(number) && number > 0) {
        return `${base} + ${number} week${number === 1 ? '' : 's'}`;
      }
      return base;
    };

    const formatDiamondBreakdown = (value) => {
      const raw = String(value || '').trim();
      if (!raw) return '--';
      return raw.replace(/\s*[\n;]+\s*/g, ', ');
    };

    const setText = (el, value) => {
      if (!el) return;
      const text = value === undefined || value === null || value === '' ? '--' : String(value);
      el.textContent = text;
    };

    const getCatalogBase = () => apiBase.replace(/\/admin\/?$/, '');

    const extractSlug = (url) => {
      if (!url) return '';
      try {
        const parsed = new URL(url, 'https://www.heerawalla.com');
        const parts = parsed.pathname.split('/').filter(Boolean);
        const last = parts[parts.length - 1] || '';
        if (last.toLowerCase() === 'bespoke' && parts.length > 1) {
          return parts[parts.length - 2] || '';
        }
        return last;
      } catch {
        return '';
      }
    };

    const extractCatalogType = (url) => {
      if (!url) return '';
      try {
        const parsed = new URL(url, 'https://www.heerawalla.com');
        const parts = parsed.pathname.split('/').filter(Boolean);
        if (parts.includes('inspirations')) return 'inspirations';
        if (parts.includes('product') || parts.includes('products')) return 'products';
        return '';
      } catch {
        return '';
      }
    };

    const loadCatalog = async () => {
      if (catalogCache.data) return catalogCache.data;
      if (catalogCache.promise) return catalogCache.promise;
      const url = `${getCatalogBase()}/catalog?include=products,inspirations`;
      catalogCache.promise = fetch(url)
        .then((response) => response.json())
        .then((data) => {
          catalogCache.data = data || {};
          return catalogCache.data;
        })
        .catch(() => {
          catalogCache.data = {};
          return catalogCache.data;
        })
        .finally(() => {
          catalogCache.promise = null;
        });
      return catalogCache.promise;
    };

    const collectImageUrls = (entry) => {
      if (!entry) return [];
      const candidates = [];
      if (entry.hero_image) candidates.push(entry.hero_image);
      if (entry.heroImage) candidates.push(entry.heroImage);
      if (Array.isArray(entry.images)) {
        entry.images.forEach((image) => candidates.push(image));
      }
      return Array.from(new Set(candidates.filter(Boolean)));
    };

    const resolveCatalogEntry = (data, catalog) => {
      if (!catalog || !data) return null;
      const url = data.productUrl || '';
      const slug = extractSlug(url);
      const type = extractCatalogType(url);
      const designCode = data.designCode || '';
      const name = data.productName || '';
      const inspirations = Array.isArray(catalog.inspirations) ? catalog.inspirations : [];
      const products = Array.isArray(catalog.products) ? catalog.products : [];
      const byDesignCode = (entry) =>
        designCode &&
        String(entry.design_code || entry.designCode || '').toLowerCase() === designCode.toLowerCase();
      const byName = (entry) =>
        name && String(entry.name || entry.title || '').toLowerCase() === name.toLowerCase();
      const bySlug = (entry) => slug && String(entry.slug || '').toLowerCase() === slug.toLowerCase();
      if (type === 'inspirations') {
        return inspirations.find(bySlug) || inspirations.find(byDesignCode) || inspirations.find(byName) || null;
      }
      if (type === 'products') {
        return products.find(bySlug) || products.find(byDesignCode) || products.find(byName) || null;
      }
      return (
        inspirations.find(bySlug) ||
        products.find(bySlug) ||
        inspirations.find(byDesignCode) ||
        products.find(byDesignCode) ||
        inspirations.find(byName) ||
        products.find(byName) ||
        null
      );
    };

    const renderMedia = (images) => {
      if (!mediaEl) return;
      if (!images.length) {
        mediaEl.innerHTML =
          '<div class="aspect-[4/3] w-full rounded-2xl bg-slate-100 text-sm text-slate-400 flex items-center justify-center">No images available</div>';
        return;
      }
      if (images.length === 1) {
        const src = images[0];
        mediaEl.innerHTML = `<img class="w-full rounded-2xl object-cover" src="${src}" alt="" loading="lazy">`;
        return;
      }
      const slides = images
        .map(
          (src) =>
            `<div class="snap-start shrink-0 w-64">
              <img class="w-full h-40 rounded-2xl object-cover" src="${src}" alt="" loading="lazy">
            </div>`
        )
        .join('');
      mediaEl.innerHTML = `
        <div class="flex gap-3 overflow-x-auto pb-2 snap-x snap-mandatory">
          ${slides}
        </div>
      `;
    };

    const refreshOrderMedia = async (data) => {
      if (!mediaEl) return;
      const catalog = await loadCatalog();
      const entry = resolveCatalogEntry(data, catalog);
      const images = collectImageUrls(entry);
      renderMedia(images);
    };

    const createRow = (label, fromValue, toValue) => {
      const row = document.createElement('div');
      row.className = 'grid gap-2 px-4 py-3 sm:grid-cols-[140px_1fr]';
      const labelEl = document.createElement('div');
      labelEl.className = 'text-[10px] uppercase tracking-[0.2em] text-slate-500';
      labelEl.textContent = label;
      const valueEl = document.createElement('div');
      valueEl.className = 'flex flex-wrap items-center gap-2 text-sm text-ink';
      const fromEl = document.createElement('span');
      fromEl.className = 'text-slate-400 line-through';
      fromEl.textContent = fromValue || '--';
      const arrowEl = document.createElement('span');
      arrowEl.className = 'text-slate-400';
      arrowEl.textContent = '->';
      const toEl = document.createElement('span');
      toEl.className = 'font-medium text-ink';
      toEl.textContent = toValue || '--';
      valueEl.append(fromEl, arrowEl, toEl);
      row.append(labelEl, valueEl);
      return row;
    };

    const requestJson = async (path, options = {}) => {
      if (!apiBase) throw new Error('missing_api');
      const base = apiBase.replace(/\/$/, '');
      const response = await fetch(`${base}${path}`, {
        headers: { 'Content-Type': 'application/json' },
        ...options,
      });
      if (!response.ok) {
        const text = await response.text();
        throw new Error(text || 'request_failed');
      }
      return await response.json();
    };

    if (!token) {
      setStatus('This confirmation link is missing or invalid. Please contact the concierge.', 'error');
      setButtonsEnabled(false);
      return;
    }

    const loadConfirmation = async () => {
      setStatus('Loading your confirmation details...');
      setButtonsEnabled(false);
      try {
        const data = await requestJson(`/orders/confirmation?token=${encodeURIComponent(token)}`);
        const order = data.order || data.item || {};
        const requestId = order.requestId || order.request_id || data.requestId || '--';
        const productName = order.productName || order.product_name || data.productName || '--';
        const customerName = order.name || data.name || '--';
        const status = data.status || 'pending';
        const cancelUrl = data.cancelUrl || '';

        if (requestEl) requestEl.textContent = requestId || '--';
        if (productEl) productEl.textContent = productName || '--';
        if (nameEl) nameEl.textContent = customerName || '--';
        if (cancelLink && cancelUrl) {
          cancelLink.setAttribute('href', cancelUrl);
        }

        setText(designCodeEl, order.designCode || order.design_code || '--');
        setText(metalEl, order.metal || '--');
        setText(metalWeightEl, formatGrams(order.metalWeight || order.metal_weight));
        setText(metalWeightAdjustmentEl, formatSignedGrams(order.metalWeightAdjustment || order.metal_weight_adjustment));
        setText(stoneEl, order.stone || '--');
        setText(stoneWeightEl, formatStoneWeight(order.stoneWeight || order.stone_weight));
        setText(
          diamondBreakdownEl,
          formatDiamondBreakdown(order.diamondBreakdown || order.diamond_breakdown)
        );
        setText(sizeEl, order.size || '--');
        setText(
          timelineEl,
          formatTimelineSummary(order.timeline, order.timelineAdjustmentWeeks || order.timeline_adjustment_weeks)
        );
        setText(priceEl, formatMoney(order.price));

        const changes = Array.isArray(data.changes)
          ? data.changes
          : Array.isArray(order.changes)
          ? order.changes
          : [];

        if (listEl) {
          listEl.innerHTML = '';
          if (!changes.length) {
            const empty = document.createElement('div');
            empty.className = 'px-4 py-3 text-sm text-slate-500';
            empty.textContent = 'No changes listed in this confirmation.';
            listEl.appendChild(empty);
          } else {
            changes.forEach((change) => {
              const label = change.label || labelMap[change.key] || 'Update';
              const fromValue = change.from ?? change.previous ?? change.old ?? '';
              const toValue = change.to ?? change.next ?? change.new ?? '';
              listEl.appendChild(createRow(label, String(fromValue || '--'), String(toValue || '--')));
            });
          }
        }

        if (status !== 'pending') {
          const statusMessage =
            status === 'confirmed'
              ? 'This update has already been confirmed. We will follow up with secure checkout.'
              : status === 'canceled'
              ? 'This update was canceled. Our concierge will follow up.'
              : 'This confirmation link has already been used.';
          setStatus(statusMessage, status === 'canceled' ? 'error' : 'success');
          setButtonsEnabled(false);
          return;
        }

        refreshOrderMedia({
          productUrl: order.productUrl || order.product_url,
          productName,
          designCode: order.designCode || order.design_code,
        });
        setStatus('Review the updated details and confirm to continue.', 'success');
        setButtonsEnabled(true);
      } catch (error) {
        setStatus('We could not load your confirmation details. Please contact the concierge.', 'error');
      }
    };

    const confirmUpdate = async () => {
      if (!confirmBtn) return;
      setStatus('Submitting confirmation...');
      setButtonsEnabled(false);
      try {
        const result = await requestJson('/orders/confirmation/confirm', {
          method: 'POST',
          body: JSON.stringify({ token }),
        });
        const paymentUrl = result.paymentUrl || result.checkoutUrl || result.url;
        if (paymentUrl) {
          window.location.href = paymentUrl;
          return;
        }
        setStatus('Confirmation received. We will email your secure checkout link shortly.', 'success');
      } catch (error) {
        setStatus('We could not confirm your update. Please contact the concierge.', 'error');
        setButtonsEnabled(true);
      }
    };

    if (confirmBtn) confirmBtn.addEventListener('click', confirmUpdate);
    loadConfirmation();
  })();
</script>
