---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { loadInspirations, INSPIRATION_DISCLAIMER, type Inspiration } from '../../lib/inspirations';
import { withBase } from '../../lib/paths';

export async function getStaticPaths() {
  const inspirations = await loadInspirations();
  return inspirations.map((item) => ({
    params: { slug: item.slug },
    props: { item }
  }));
}

const { item } = Astro.props as { item: Inspiration };
const catalogUrl = import.meta.env.PUBLIC_CATALOG_API_URL || '';
const catalogMode = (import.meta.env.PUBLIC_CATALOG_MODE || 'hybrid').toLowerCase();
const metaTitle = `${item.title} | Inspirations | Heerawalla`;
const metaDescription = item.shortDesc;

const usdFormatter = new Intl.NumberFormat('en-US', {
  style: 'currency',
  currency: 'USD',
  maximumFractionDigits: 0
});

const formatNumber = (value: number) => {
  if (Number.isInteger(value)) return value.toString();
  return value.toString();
};
const roundTo99 = (value: number) => {
  if (!Number.isFinite(value)) return value;
  const lower = Math.floor(value / 100) * 100 + 99;
  const upper = Math.ceil(value / 100) * 100 + 99;
  return Math.abs(value - lower) <= Math.abs(value - upper) ? lower : upper;
};

const buildEstimateDetails = (inspiration: Inspiration) => {
  const details: Array<{ label: string; value: string }> = [];
  if (inspiration.estimatedPriceUsdVvs1Vvs2_18k) {
    details.push({
      label: 'Est. price',
      value: usdFormatter.format(roundTo99(inspiration.estimatedPriceUsdVvs1Vvs2_18k))
    });
  }
  if (inspiration.stoneWeight) {
    const stoneOptions = inspiration.stoneTypes.length
      ? ` (${inspiration.stoneTypes.join(' / ')})`
      : '';
    details.push({
      label: 'Stone',
      value: `${formatNumber(inspiration.stoneWeight)}ct TW${stoneOptions}`
    });
  }
  if (inspiration.metalWeight) {
    details.push({
      label: 'Metal',
      value: `${formatNumber(inspiration.metalWeight)}g 18K`
    });
  }
  return details;
};

const estimateDetails = buildEstimateDetails(item);
const inspirationSlug = item.slug;
---

<BaseLayout title={metaTitle} description={metaDescription}>
  <Header />

  <main class="max-w-7xl mx-auto px-6 py-12 space-y-12">
    <div class="flex items-center justify-between text-xs uppercase tracking-[0.2em] text-slate-500">
      <a href={withBase('/inspirations')} class="hover:text-ink">Back to Inspirations</a>
      <span>Unlocked direction</span>
    </div>

    <section class="grid gap-10 lg:grid-cols-[1.05fr_0.95fr] items-start">
      <div class="space-y-5">
        <p class="text-xs uppercase tracking-[0.3em] text-slate-500">Inspiration</p>
        <h1 class="font-display text-4xl sm:text-5xl tracking-tight">{item.title}</h1>
        <p class="text-sm text-slate-600 max-w-xl">{item.longDesc}</p>
        <div class="flex flex-wrap gap-2 text-[10px] uppercase tracking-[0.18em] text-slate-500">
          {item.tags.map((tag) => (
            <span class="border border-slate-200 px-2 py-1">{tag}</span>
          ))}
        </div>
        <div class={`space-y-2 pt-2${estimateDetails.length ? '' : ' hidden'}`} data-estimate-wrapper>
          <p class="text-[10px] uppercase tracking-[0.28em] text-slate-400">
            Estimate
          </p>
          <div
            class="flex flex-wrap gap-2 text-[10px] uppercase tracking-[0.18em] text-slate-500"
            data-estimate-list
          >
            {estimateDetails.map((detail) => (
              <span class="border border-slate-200 px-2 py-1">
                {detail.label}: {detail.value}
              </span>
            ))}
          </div>
        </div>
        <div class="flex flex-wrap gap-3 pt-2">
          <a
            href={withBase(`/inspirations/${item.slug}/bespoke`)}
            class="inline-flex items-center justify-center min-h-[44px] px-5 py-3 bg-ink text-white text-xs uppercase tracking-[0.2em] rounded-none focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ink focus-visible:ring-offset-2 focus-visible:ring-offset-white"
            data-analytics-event="cta_click"
            data-analytics-label="Request Quote"
            data-analytics-location="inspiration-detail"
          >
            Request Quote
          </a>
        </div>
      </div>
      <div class="border border-slate-200 bg-white overflow-hidden">
        <img
          src={withBase(item.heroImage)}
          alt={`${item.title} inspiration`}
          class="w-full h-full object-cover"
          loading="lazy"
          decoding="async"
          fetchpriority="high"
        />
      </div>
    </section>

    <section class="grid gap-8 lg:grid-cols-2 border-t border-slate-200 pt-8">
      <div class="space-y-4">
        <h2 class="font-display text-2xl tracking-tight">What we take from this</h2>
        <ul class="space-y-3 text-sm text-slate-600 list-disc list-inside">
          {item.takeaways.map((point) => (
            <li>{point}</li>
          ))}
        </ul>
      </div>
      <div class="space-y-4">
        <h2 class="font-display text-2xl tracking-tight">How Heerawalla translates it</h2>
        <ul class="space-y-3 text-sm text-slate-600 list-disc list-inside">
          {item.translationNotes.map((point) => (
            <li>{point}</li>
          ))}
        </ul>
      </div>
    </section>

    <section class="border-t border-slate-200 pt-8 space-y-4">
      <h2 class="font-display text-2xl tracking-tight">Suggested palette</h2>
      <div class="flex flex-wrap gap-2">
        {item.palette.map((chip) => (
          <span class="px-3 py-1 text-xs uppercase tracking-[0.18em] border border-slate-200 text-slate-500">
            {chip.label}
          </span>
        ))}
      </div>
    </section>

    <section class="border-t border-slate-200 pt-8 space-y-4">
      <h2 class="font-display text-2xl tracking-tight">Inspiration disclaimer</h2>
      <p class="text-sm text-slate-600 max-w-3xl">{INSPIRATION_DISCLAIMER}</p>
      <a
        href={withBase(`/inspirations/${item.slug}/bespoke`)}
        class="text-xs uppercase tracking-[0.2em] text-slate-500 hover:text-ink"
        data-analytics-event="cta_click"
        data-analytics-label="Request Bespoke"
        data-analytics-location="inspiration-detail"
      >
        Request bespoke
      </a>
    </section>
  </main>

  <Footer />

  <script is:inline define:vars={{ catalogUrl, catalogMode, inspirationSlug }}>
    (() => {
      const catalogUrl = String(catalogUrl || '');
      const catalogMode = String(catalogMode || '').toLowerCase();
      const inspirationSlug = String(inspirationSlug || '');
      if (!catalogUrl || catalogMode === 'ssr' || !inspirationSlug) return;

      const wrapper = document.querySelector('[data-estimate-wrapper]');
      const listEl = document.querySelector('[data-estimate-list]');
      if (!wrapper || !listEl) return;

      const usdFormatter = new Intl.NumberFormat('en-US', {
        style: 'currency',
        currency: 'USD',
        maximumFractionDigits: 0
      });

      const formatNumber = (value) => {
        if (!Number.isFinite(value)) return '';
        if (Number.isInteger(value)) return value.toString();
        return value.toString();
      };

      const roundTo99 = (value) => {
        if (!Number.isFinite(value)) return value;
        const lower = Math.floor(value / 100) * 100 + 99;
        const upper = Math.ceil(value / 100) * 100 + 99;
        return Math.abs(value - lower) <= Math.abs(value - upper) ? lower : upper;
      };

      const buildDetails = (item) => {
        const details = [];
        const price = Number(item.estimatedPriceUsdVvs1Vvs2_18k || 0);
        if (price) {
          details.push({
            label: 'Est. price',
            value: usdFormatter.format(roundTo99(price))
          });
        }
        if (item.stoneWeight) {
          const stoneOptions = item.stoneTypes && item.stoneTypes.length
            ? ` (${item.stoneTypes.join(' / ')})`
            : '';
          details.push({
            label: 'Stone',
            value: `${formatNumber(Number(item.stoneWeight))}ct TW${stoneOptions}`
          });
        }
        if (item.metalWeight) {
          details.push({
            label: 'Metal',
            value: `${formatNumber(Number(item.metalWeight))}g 18K`
          });
        }
        return details;
      };

      const renderDetails = (details) => {
        if (!details.length) {
          wrapper.classList.add('hidden');
          listEl.innerHTML = '';
          return;
        }
        wrapper.classList.remove('hidden');
        listEl.innerHTML = details
          .map(
            (detail) =>
              `<span class="border border-slate-200 px-2 py-1">${detail.label}: ${detail.value}</span>`
          )
          .join('');
      };

      const fetchCatalog = async () => {
        const joiner = catalogUrl.includes('?') ? '&' : '?';
        const url = `${catalogUrl}${joiner}include=inspirations`;
        try {
          const response = await fetch(url, { cache: 'no-store' });
          if (!response.ok) return;
          const data = await response.json();
          if (!data || !Array.isArray(data.inspirations)) return;
          const match = data.inspirations.find((entry) => entry && entry.slug === inspirationSlug);
          if (!match) return;
          renderDetails(buildDetails(match));
        } catch {
          // Ignore catalog errors; fall back to SSR data.
        }
      };

      fetchCatalog();
    })();
  </script>
</BaseLayout>
