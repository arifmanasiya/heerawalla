---
import CurrencyToggle from './CurrencyToggle.astro';
import { withBase } from '../lib/paths';
---

<header class="w-full">
  <div class="container flex items-center justify-between py-6">
    <a href={withBase('/')} class="flex items-center gap-3 text-lg font-semibold tracking-tight">
      <img
        src={withBase('/images/heerawalla-logo.jpeg')}
        alt="Heerawalla logo"
        class="h-10 w-auto rounded-md shadow-sm ring-1 ring-slate-200 object-contain bg-white"
        loading="lazy"
      />
      <div class="leading-tight">
        <div class="text-base font-semibold">Heerawalla</div>
        <div class="text-xs text-slate-500">Fine Jewelry</div>
      </div>
    </a>
    <nav class="hidden md:flex items-center gap-6 text-sm font-medium">
      <a href={withBase('/collections')} class="hover:text-accent">Collections</a>
      <a href={withBase('/about')} class="hover:text-accent">About</a>
      <a href={withBase('/contact')} class="hover:text-accent">Contact</a>
      <a href={withBase('/policies')} class="hover:text-accent">Policies</a>
    </nav>
    <div class="flex items-center gap-4">
      <CurrencyToggle />
      <a href="mailto:hello@heerawalla.com" class="text-sm hover:text-accent">Client Care</a>
    </div>
  </div>
</header>
