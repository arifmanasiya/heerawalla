---
import { withBase } from '../lib/paths';
---

<header class="w-full">
  <div class="max-w-7xl mx-auto px-6 pt-6 pb-2 flex items-center justify-between gap-6">
    <a href={withBase('/')} class="text-left">
      <span class="wordmark text-[15px] sm:text-[16px]">Heerawalla</span>
    </a>
    <nav class="hidden md:flex items-center gap-8 text-[11px] uppercase tracking-[0.28em] text-slate-500" aria-label="Primary">
      <a href={withBase('/inspirations')} class="hover:text-ink">Inspirations</a>
      <a href={withBase('/contact?intent=consultation')} class="hover:text-ink">Concierge</a>
    </nav>
  </div>
  <nav
    class="md:hidden max-w-7xl mx-auto px-6 pb-3 flex items-center gap-6 text-[10px] uppercase tracking-[0.28em] text-slate-500"
    aria-label="Primary"
  >
    <a href={withBase('/inspirations')} class="hover:text-ink">Inspirations</a>
    <a href={withBase('/contact?intent=consultation')} class="hover:text-ink">Concierge</a>
  </nav>
</header>
