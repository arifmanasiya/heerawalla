---
interface Crumb {
  label: string;
  href?: string;
  kind?: string;
}
const { crumbs } = Astro.props as { crumbs: Crumb[] };
---

<nav class="text-xs text-slate-500 mb-4" aria-label="Breadcrumb">
  <ol class="flex items-center gap-2 flex-wrap">
    {crumbs.map((crumb, idx) => (
      <li class="flex items-center gap-2">
        {crumb.href ? (
          <a
            class="hover:text-accent"
            href={crumb.href}
            data-breadcrumb-kind={crumb.kind}
          >
            {crumb.label}
          </a>
        ) : (
          <span>{crumb.label}</span>
        )}
        {idx < crumbs.length - 1 ? <span aria-hidden="true">/</span> : null}
      </li>
    ))}
  </ol>
</nav>
